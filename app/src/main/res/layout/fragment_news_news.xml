<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.fragments.Fragment_news">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/newslistRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/recylerviewmarginleftandright"
                android:layout_marginRight="@dimen/recylerviewmarginleftandright"
                android:layout_marginTop="@dimen/recylerviewmargintop" />
        </LinearLayout>

        <include
            android:id="@+id/load_layout"
            layout="@layout/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </RelativeLayout>


</FrameLayout>